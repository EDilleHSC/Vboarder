# VBoarder Backend Environment Configuration
# Copy this file to .env and customize for your environment

# API Configuration
API_KEY=dev-only-key-replace-in-production
LLM_MODE=local
LOCAL_URL=http://127.0.0.1:11434
EMBEDDING_URL=http://127.0.0.1:11434

# OpenAI Configuration (if using LLM_MODE=openai)
OPENAI_URL=https://api.openai.com/v1
OPENAI_API_KEY=your-openai-key-here

# Model Configuration
LOCAL_MODEL=mistral:7b-instruct
EMBEDDING_MODEL=nomic-embed-text

# Application Settings
STREAMING_ENABLED=false
MAX_MEMORY_MB=256
TOP_K_DEFAULT=5
LOG_LEVEL=INFO

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3010

# Database (if using Postgres/Qdrant)
# DATABASE_URL=postgresql://user:pass@localhost:5432/vboarder
# QDRANT_URL=http://localhost:6333
